<p id="notice"><%= notice %></p>

<h1>Events</h1>

<!-- 
     find todays date & set it as a param
     use start_date and find a range from 
     beginning of current month to the end
     of current month and extend to the 
     beginning/end of the nearest weeks
     and convert to an array 
-->

<% @calendar = params[:calendar_id] %>


  <article>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Due date</th>
          <th>Start time</th>
          <th>Finish time</th>
          <th>Location</th>
          <th>Description</th>
          <th>Priority</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.due_date %></td>
            <td><%= event.start_time %></td>
            <td><%= event.finish_time %></td>
            <td><%= event.location %></td>
            <td><%= event.description %></td>
            <td><%= event.priority %></td>
          </tr>
          <tr>
            <td><%= link_to 'Show', @event %></td>
            <td><%= link_to 'Destroy', calendar_event_path(@calendar, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>

<br>

<%= link_to 'New Event', new_calendar_event_path(@calendar, @event) %>
