<h1>New Event</h1>

<% @calendar = Calendar.find(params[:calendar_id])%>



<%= form_for([@calendar, @event]) do |f| %>

    <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_field  :due_date %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :finish_time %>
    <%= f.datetime_field :finish_time %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </div>

    <%= f.submit %>
<% end %>


<%= link_to 'Back', calendar_path(@calendar) %>
