<p id="notice"><%= notice %></p>


<div class="NotebookBox">
  <h3>Notebooks</h3>

  <table>
  
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.notebooks.each do |notebook| %>
        <tr>
          <td><%= notebook.name %></td>
          
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td><%= link_to '+ New Notebook', new_category_path %></td>
      </tr>
    </tfoot>

  </table>

</div>