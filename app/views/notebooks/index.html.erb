<p id="notice"><%= notice %></p>


<div class="NotebookBox">
  <h1>Notebooks</h1>

  <table>
  
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.notebooks.each do |notebook| %>
        <tr>
          <td><%= notebook.name %></td>
          <td><%= link_to 'Show', category_notebook_notes_path(@category, notebook) %></td>
          <td><%= link_to 'Edit', edit_category_notebook_path(@category, notebook) %></td>
          <td><%= link_to 'Destroy', category_notebook_path(@category, notebook), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td><%= link_to 'New Notebook', new_category_notebook_path(@category) %></td>
      </tr>
    </tfoot>

  </table>

</div>