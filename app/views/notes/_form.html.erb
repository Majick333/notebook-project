
<aside>

<% form_for ([ @notebook, @note]) do |f| %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>

    
    <%= f.hidden_field :category_id, :value => @category.id %>
    <%= f.hidden_field :notebook_id, :value => @notebook.id %>
<% end %>

</aside>